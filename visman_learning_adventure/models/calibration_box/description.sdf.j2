<?xml version="1.0"?>
<sdf version="1.4">
  <model name="calibration_box">
    <static>false</static>
    <link name="calibration_box_link">
      <velocity_decay>
        <linear>1.0</linear>
      </velocity_decay>
      <gravity>1</gravity>

      <inertial>
        <mass>10</mass>
      </inertial>

      <!-- these is the box faces -->
{% for face in faces %}
      <!-- {{ face.prefix }} -->
      <collision name="{{ face.prefix }}_collision">
        <pose>{{ face.pose }} 0 0 0</pose>
        <geometry>
          <box>
            <size>{{ face.size }}</size>
          </box>
        </geometry>
        <surface>
          <contact>
            <collide_without_contact>true</collide_without_contact>
          </contact>
          <friction>
            <bullet>
              <friction>1.0</friction>
              <friction2>1.0</friction2>
              <fdir1>0 0 0</fdir1>
              <rolling_friction>1.0</rolling_friction>
            </bullet>
          </friction>
        </surface>
      </collision>
      <visual name="{{ face.prefix }}_visual">
        <pose>{{ face.pose }} 0 0 0</pose>
        <geometry>
          <box>
            <size>{{ face.size }}</size>
          </box>
        </geometry>
        <material>
          <ambient>1 1 1 1</ambient>
          <diffuse>1 1 1 1</diffuse>
          <script>
            <uri>model://calibration_box/materials/scripts</uri>
            <uri>model://calibration_box/materials/textures</uri>
            <name>{{ face.script_name }}</name>
          </script>
        </material>
      </visual>
{% endfor %}
    </link>
  </model>
</sdf>
